<Window x:Class="GeocodingHarness.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:navigation="http://schemas.microsoft.com/xps/2005/06"
		mc:Ignorable="d"
        Title="Spatial Data Tool - Main Menu" Height="600" Width="900" Background="#eee">
	<Grid>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="100" />
				<ColumnDefinition Width="1*" />
				<ColumnDefinition Width="100" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="1*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="*" />
				<RowDefinition Height="1*" />
			</Grid.RowDefinitions>
			<Button Grid.Row="1" Grid.Column="1" Tag="/Views/MainWindow.xaml" Name="Geocode" Content="Geocode" Click="Geocode_Click" />
			<Button Grid.Row="2" Grid.Column="1" Tag="" Name="ReverseGeocode" Content="Reverse Geocode" Click="ReverseGeocode_Click" />
		</Grid>
	</Grid>
</Window>
