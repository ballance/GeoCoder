<Window x:Class="GeocodingHarness.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GeocodingHarness"
        mc:Ignorable="d"
        Title="Geocoder Chooser" Height="450" Width="800">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="400" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="1*" />
			<RowDefinition Height="40" />
			<RowDefinition Height="40" />
			<RowDefinition Height="1*" />
		</Grid.RowDefinitions>
		<ComboBox Grid.Row="1" Grid.Column="1" Name="GeocoderSelector" SelectedIndex="0">
			<ComboBoxItem Content="Google" />
			<ComboBoxItem Content="Custom" />
		</ComboBox>
		<Button Grid.Row="2" Grid.Column="1" Name="Go" Content="Go" Click="Go_Click" />
	</Grid>
</Window>
